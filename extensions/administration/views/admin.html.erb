<!-- DOCTYPE html -->
<html>
  <head>
    <title><%= site.name %> CMS</title>
    <link href="/admin_static/css/reset.css" rel="stylesheet" type="text/css">
    <link href="/admin_static/css/calendarview.css" rel="stylesheet" type="text/css">
    <link href="/admin_static/css/tinyeditor.css" rel="stylesheet" type="text/css">
    <link href="/admin_static/css/admin.css" rel="stylesheet" type="text/css">
    <script src="/admin_static/javascript/prototype.js"></script>
    <script src="/admin_static/javascript/calendarview.js"></script>
    <script src="/admin_static/javascript/tinyeditor.js"></script>
    <script src="/admin_static/javascript/admin.js"></script>
  </head>
  <body>
    <header>
      <h1><%= site.name %> <span>CMS</span></h1>
      <nav>
        <menu>
          <% Yodel.config.admin_tabs.each do |controller| %>
            <li class='<%= controller == @controller.class ? 'selected' : '' %>'><a href="<%= controller.path_and_action_for(:index).path %>"><%= controller.tab_name %></a></li>
          <% end %>
        </menu>
      </nav>
    </header>
    <article>
      <aside class="items">
        <%= @content %>
      </aside>
      <% controller_models.each do |model| %>
        <%= form_for_model(model.new(site: site), '', 'get') %>
        <script>
          defaultRecords['<%= model.name.demodulize.underscore %>'] = <%= model.default_values_to_json_hash.to_json %>;
        </script>
      <% end %>
    </article>
    
    <% if session['errors'] %>
      <script>
        alert("An error occurred creating this record:\n\n<%= session['errors'].collect {|key, errors| "#{key.to_s.humanize.titleize}: #{errors.join(' and ')}"}.join('\n') %>");
      </script>
      <% session.delete('errors') %>
    <% end %>
  </body>
</html>
